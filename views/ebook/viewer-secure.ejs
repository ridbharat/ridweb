    <!-- Include PDF.js from CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.4.120/pdf.min.js"></script>
    <script>
        // Set PDF.js worker path
        pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.4.120/pdf.worker.min.js';

        // Mobile Configuration
        const MOBILE_CONFIG = {
            logEndpoint: '<%= typeof basePath !== "undefined" ? basePath + "/api/security/log" : "/ebook/api/security/log" %>',
            pdfId: '<%= pdf._id %>',
            sessionToken: '<%= sessionToken %>'
        };

        // Mobile-Optimized State
        let pdfDoc = null;
        let currentPage = 1;
        let totalPages = 0;
        let currentScale = 1.0;
        let isPinching = false;
        let lastTouchDistance = 0;
        
        // Auto-Hide State Variables
        let hideControlsTimeout;
        let isControlsVisible = true;
        let lastActivityTime = Date.now();
        const INACTIVITY_TIMEOUT = 3000; // 3 seconds
        
        // Mobile-optimized scale settings
        const MOBILE_SCALE_FACTOR = 0.2;
        const MOBILE_MIN_SCALE = 0.5;
        const MOBILE_MAX_SCALE = 3.0;

        // HD Rendering Configuration
        const HD_CONFIG = {
            pixelRatio: Math.min(2.0, window.devicePixelRatio || 1),
            imageSmoothing: true,
            renderQuality: 'high'
        };

        // Calculate mobile-optimized initial scale
        function calculateMobileScale() {
            const screenWidth = window.innerWidth;
            const screenHeight = window.innerHeight;
            
            if (screenWidth < 360) return 0.6;  // Very small phones
            if (screenWidth < 414) return 0.7;  // Small phones
            if (screenWidth < 768) return 0.8;  // Medium phones
            return 1.0; // Tablets and larger
        }

        // Enhanced Print Protection
        function setupPrintProtection() {
            console.log('üõ°Ô∏è Enhanced print protection initialized');
            
            // Before print event
            window.addEventListener('beforeprint', (event) => {
                event.preventDefault();
                showPrintWarning();
                logSecurityEvent('PRINT_ATTEMPT_BLOCKED', {
                    method: 'beforeprint',
                    timestamp: new Date().toISOString()
                });
                return false;
            });
            
            // After print event
            window.addEventListener('afterprint', (event) => {
                event.preventDefault();
                closePrintWarning();
                logSecurityEvent('PRINT_DIALOG_CLOSED');
                return false;
            });
            
            // Override print function
            window.print = function() {
                showPrintWarning();
                logSecurityEvent('PRINT_FUNCTION_OVERRIDE');
                return false;
            };
            
            // Catch print key combinations
            document.addEventListener('keydown', (e) => {
                if ((e.ctrlKey || e.metaKey) && (e.key === 'p' || e.key === 'P')) {
                    e.preventDefault();
                    showPrintWarning();
                    logSecurityEvent('PRINT_SHORTCUT_BLOCKED', { key: e.key });
                    return false;
                }
            });
            
            // Monitor for print media queries
            const printMediaQuery = window.matchMedia('print');
            printMediaQuery.addListener((mq) => {
                if (mq.matches) {
                    showPrintWarning();
                    logSecurityEvent('PRINT_MEDIA_QUERY_DETECTED');
                }
            });
        }

        function showPrintWarning() {
            const warning = document.getElementById('printWarning');
            warning.style.display = 'flex';
            
            // Auto-hide after 5 seconds
            setTimeout(() => {
                closePrintWarning();
            }, 5000);
        }

        function closePrintWarning() {
            const warning = document.getElementById('printWarning');
            warning.style.display = 'none';
        }

        // Auto-Hide Navigation Functions
        function showControls() {
            const header = document.querySelector('.security-header');
            const navigation = document.querySelector('.navigation-controls');
            const zoom = document.querySelector('.zoom-controls');
            const gestureHint = document.getElementById('gestureHint');
            
            if (header) {
                header.classList.remove('header-hidden');
                header.classList.add('header-visible');
            }
            
            if (navigation) {
                navigation.classList.remove('navigation-hidden');
                navigation.classList.add('navigation-visible');
            }
            
            if (zoom) {
                zoom.classList.remove('zoom-hidden');
                zoom.classList.add('zoom-visible');
            }
            
            if (gestureHint) {
                gestureHint.classList.remove('hidden');
            }
            
            isControlsVisible = true;
            resetHideTimeout();
        }

        function hideControls() {
            const header = document.querySelector('.security-header');
            const navigation = document.querySelector('.navigation-controls');
            const zoom = document.querySelector('.zoom-controls');
            const gestureHint = document.getElementById('gestureHint');
            
            if (header) {
                header.classList.remove('header-visible');
                header.classList.add('header-hidden');
            }
            
            if (navigation) {
                navigation.classList.remove('navigation-visible');
                navigation.classList.add('navigation-hidden');
            }
            
            if (zoom) {
                zoom.classList.remove('zoom-visible');
                zoom.classList.add('zoom-hidden');
            }
            
            if (gestureHint) {
                gestureHint.classList.add('hidden');
            }
            
            isControlsVisible = false;
        }

        function resetHideTimeout() {
            clearTimeout(hideControlsTimeout);
            lastActivityTime = Date.now();
            
            // Show keyboard hint briefly
            if (window.innerWidth >= 768) {
                const hint = document.getElementById('keyboardHint');
                if (hint) {
                    hint.style.display = 'block';
                    setTimeout(() => {
                        hint.style.display = 'none';
                    }, 3000);
                }
            }
            
            hideControlsTimeout = setTimeout(() => {
                if (isControlsVisible) {
                    hideControls();
                }
            }, INACTIVITY_TIMEOUT);
        }

        function toggleControls() {
            if (isControlsVisible) {
                hideControls();
            } else {
                showControls();
            }
        }

        function showControlsTemporarily() {
            showControls();
            setTimeout(() => {
                if (Date.now() - lastActivityTime > INACTIVITY_TIMEOUT - 1000) {
                    resetHideTimeout();
                }
            }, 500);
        }

        function setupAutoHide() {
            const pdfContainer = document.getElementById('pdfContainer');
            
            if (!pdfContainer) return;
            
            // Single tap to toggle controls
            let tapTimer;
            let lastTapTime = 0;
            let tapCount = 0;
            
            pdfContainer.addEventListener('touchstart', (e) => {
                // Don't hide if tapping on controls
                if (e.target.closest('.navigation-controls') || 
                    e.target.closest('.zoom-controls') ||
                    e.target.closest('.security-header')) {
                    return;
                }
                
                const currentTime = Date.now();
                
                if (currentTime - lastTapTime < 300) {
                    // Double tap detected - don't toggle, let zoom handle it
                    tapCount++;
                    clearTimeout(tapTimer);
                } else {
                    tapCount = 1;
                }
                
                lastTapTime = currentTime;
                
                if (tapCount === 1) {
                    tapTimer = setTimeout(() => {
                        // Single tap - toggle controls
                        if (tapCount === 1) {
                            toggleControls();
                        }
                        tapCount = 0;
                    }, 300);
                }
            });
            
            pdfContainer.addEventListener('touchend', (e) => {
                // Prevent default to avoid highlighting
                if (!e.target.closest('.nav-btn') && !e.target.closest('.zoom-btn') && !e.target.closest('.back-btn')) {
                    e.preventDefault();
                }
            });
            
            // Mouse click for desktop/tablet
            pdfContainer.addEventListener('click', (e) => {
                // Don't hide if clicking on controls
                if (e.target.closest('.navigation-controls') || 
                    e.target.closest('.zoom-controls') ||
                    e.target.closest('.security-header')) {
                    return;
                }
                
                toggleControls();
            });
            
            // Track activity to auto-hide
            document.addEventListener('mousemove', resetHideTimeout);
            document.addEventListener('touchmove', resetHideTimeout);
            document.addEventListener('keypress', resetHideTimeout);
            
            // Pinch zoom ke liye alag handling
            pdfContainer.addEventListener('touchstart', (e) => {
                if (e.touches.length === 2) {
                    // Pinch zoom shuru - hide controls
                    hideControls();
                }
            });
            
            // Never hide when interacting with buttons
            document.querySelectorAll('.nav-btn, .zoom-btn, .back-btn').forEach(btn => {
                btn.addEventListener('touchstart', (e) => {
                    e.stopPropagation();
                    resetHideTimeout();
                });
                
                btn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    resetHideTimeout();
                });
            });
            
            console.log('‚úÖ Auto-hide navigation initialized');
        }

        // Mobile Keyboard Navigation
        function setupKeyboardNavigation() {
            console.log('‚å®Ô∏è Keyboard navigation initialized');
            
            document.addEventListener('keydown', (e) => {
                // Don't trigger if user is typing in an input field
                if (e.target.tagName === 'INPUT' || e.target.tagName === 'TEXTAREA') {
                    return;
                }
                
                switch(e.key) {
                    case 'ArrowRight':
                    case 'Right':
                    case ' ':
                    case 'Spacebar':
                        // Spacebar or Right Arrow for next page
                        e.preventDefault();
                        showKeyPressFeedback('ArrowRight');
                        goToNextPage();
                        break;
                        
                    case 'ArrowLeft':
                    case 'Left':
                        // Left Arrow for previous page
                        e.preventDefault();
                        showKeyPressFeedback('ArrowLeft');
                        goToPreviousPage();
                        break;
                        
                    case '+':
                    case '=':
                        // Plus or Equals for zoom in
                        e.preventDefault();
                        if (e.ctrlKey || e.metaKey) {
                            zoomIn();
                        }
                        break;
                        
                    case '-':
                        // Minus for zoom out
                        e.preventDefault();
                        if (e.ctrlKey || e.metaKey) {
                            zoomOut();
                        }
                        break;
                        
                    case '0':
                        // Zero for reset zoom
                        e.preventDefault();
                        if (e.ctrlKey || e.metaKey) {
                            zoomReset();
                        }
                        break;
                        
                    case 'Escape':
                        // Escape to toggle controls
                        e.preventDefault();
                        toggleControls();
                        break;
                        
                    case 'Home':
                        // Home for first page
                        e.preventDefault();
                        goToPage(1);
                        break;
                        
                    case 'End':
                        // End for last page
                        e.preventDefault();
                        goToPage(totalPages);
                        break;
                }
            });
        }

        // Go to specific page function
        async function goToPage(pageNum) {
            if (pageNum >= 1 && pageNum <= totalPages && pageNum !== currentPage) {
                currentPage = pageNum;
                await renderPage(currentPage);
                document.getElementById('currentPage').textContent = currentPage;
                updateNavigation();
                showControlsTemporarily();
                logSecurityEvent('MOBILE_PAGE_JUMP', { page: pageNum });
            }
        }

        // Visual feedback for keyboard navigation
        function showKeyPressFeedback(key) {
            // Remove any existing feedback
            const existingFeedback = document.querySelector('.keyboard-feedback');
            if (existingFeedback) {
                existingFeedback.remove();
            }
            
            const feedback = document.createElement('div');
            feedback.className = 'keyboard-feedback';
            const arrowType = key.toLowerCase().replace('arrow', '');
            feedback.innerHTML = `<i class="fas fa-arrow-${arrowType}"></i>`;
            feedback.style.cssText = `
                position: fixed;
                top: 50%;
                ${key === 'ArrowLeft' ? 'left: 20px' : 'right: 20px'};
                transform: translateY(-50%);
                background: rgba(37, 99, 235, 0.9);
                color: white;
                width: 50px;
                height: 50px;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 24px;
                z-index: 1000;
                animation: pulse-fade 0.5s ease-out;
            `;
            
            document.body.appendChild(feedback);
            
            setTimeout(() => {
                if (feedback.parentNode) {
                    feedback.parentNode.removeChild(feedback);
                }
