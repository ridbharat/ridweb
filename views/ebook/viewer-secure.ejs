                body: JSON.stringify({
                    eventType,
                    pdfId: MOBILE_CONFIG.pdfId,
                    details: {
                        ...details,
                        userAgent: navigator.userAgent,
                        isMobile: true,
                        screenSize: `${window.innerWidth}x${window.innerHeight}`,
                        timestamp: new Date().toISOString()
                    }
                })
            }).catch(error => {
                console.error('Mobile log failed:', error);
            });
        }

        // HD-optimized PDF loading
        async function loadPDF() {
            try {
                console.log('üì• Loading PDF in HD...');

                const streamingUrl = '<%= basePath %>/api/stream-pdf?token=<%= sessionToken %>';
                
                const loadingTask = pdfjsLib.getDocument({
                    url: streamingUrl,
                    withCredentials: false,
