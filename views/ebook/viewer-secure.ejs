        // Mobile-optimized logging
        function logSecurityEvent(eventType, details = {}) {
            console.log(`üì± Security: ${eventType}`, details);
            
            fetch(MOBILE_CONFIG.logEndpoint, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
